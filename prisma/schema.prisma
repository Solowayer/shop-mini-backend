model Variant {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  images String[]
  price  Float
  stock  Int

  cartItems CartItem[]

  product   Product? @relation(fields: [productId], references: [id])
  productId Int?

  attributeValues AttributeValue[]
}

// default
