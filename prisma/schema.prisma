// Variant Type
model Attribute {
  id   Int    @id @default(autoincrement())
  name String // Наприклад, "Колір", "Розмір", "Пам'ять" тощо

  values AttributeValue[]

  categories AttributeToCategory[]
}

model AttributeValue {
  id    Int    @id @default(autoincrement())
  value String // Наприклад, "Червоний", "XXL", "16GB" тощо

  attribute   Attribute @relation(fields: [attributeId], references: [id])
  attributeId Int

  variant   Variant @relation(fields: [variantId], references: [id])
  variantId Int

  @@unique([attributeId, variantId])
}

model CartItem {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  name     String
  price    Int
  quantity Int

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    Int
  variant   Variant? @relation(fields: [variantId], references: [id])
  variantId Int?

  @@unique([variantId, userId])
}

// Department

model Category {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  slug String @unique
  name String

  parentId Int?

  parent   Category?  @relation("ChildrensParents", fields: [parentId], references: [id])
  children Category[] @relation("ChildrensParents")

  product    Product[]
  attributes AttributeToCategory[]
}

model Tag {
  id   Int    @id @default(autoincrement())
  name String

  product   Product? @relation(fields: [productId], references: [id])
  productId Int?
}

model AttributeToCategory {
  id          Int       @id @default(autoincrement())
  categoryId  Int
  attributeId Int
  category    Category  @relation(fields: [categoryId], references: [id])
  attribute   Attribute @relation(fields: [attributeId], references: [id])

  @@unique([categoryId, attributeId]) // Забезпечує унікальність пари значень
}

model ReviewToProduct {
  id        Int @id @default(autoincrement())
  productId Int
  reviewId  Int

  product Product    @relation(fields: [productId], references: [id])
  review  UserReview @relation(fields: [reviewId], references: [id])

  @@unique([productId, reviewId])
}

model ProductToWishlist {
  id         Int @id @default(autoincrement())
  productId  Int
  wishlistId Int

  product  Product      @relation(fields: [productId], references: [id])
  wishlist UserWishlist @relation(fields: [wishlistId], references: [id], onDelete: Cascade)

  @@unique([productId, wishlistId])
}

enum Role {
  USER
  ADMIN
  SELLER
}

enum Gender {
  MALE
  FEMALE
  OTHER
}

